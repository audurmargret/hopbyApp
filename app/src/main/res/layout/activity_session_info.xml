<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="top"
    android:padding="20dp"
    tools:context=".activities.SessionInfoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/title"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:text="@string/info_title"/>

        <TextView
            android:id="@+id/info_title"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:textAlignment="textEnd" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/description"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:text="@string/info_description"/>

        <TextView
            android:id="@+id/info_description"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:textAlignment="textEnd" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/hobbyId"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:text="@string/info_hobbyId"/>

        <TextView
            android:id="@+id/info_hobbyId"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:textAlignment="textEnd" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/location"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:text="@string/info_location"/>

        <TextView
            android:id="@+id/info_location"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:textAlignment="textEnd" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/slots"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:text="@string/info_slots"/>

        <TextView
            android:id="@+id/info_slots"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:textAlignment="textEnd" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/users"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:text="@string/info_users"/>

        <TextView
            android:id="@+id/info_users"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:textAlignment="textEnd" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/host"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:gravity="bottom"
        android:orientation="vertical"
        android:layout_weight="1"
        android:visibility="gone"
        android:padding="20dp">

        <TextView
            android:id="@+id/host_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/host_delete_text"/>
        <Button
            android:id="@+id/info_button_delete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/button_delete"
            android:gravity="right"
            android:textColor="#c70000"
            style="?android:attr/buttonBarButtonStyle"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:gravity="bottom"
        android:layout_weight="1"
        android:padding="20dp">

        <Button
            android:id="@+id/info_button_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/button_back" />
        <Button
            android:id="@+id/info_button_maps"
            android:layout_width="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_height="wrap_content"
            android:text="@string/button_maps" />
        <Button
            android:id="@+id/info_button_join"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="JOIN" />
    </LinearLayout>

</LinearLayout>